rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /ranking/{doc} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.uid;
      allow delete: if request.auth.uid == resource.data.uid;
    }
    match /playlog/{doc} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow delete: if request.auth.uid == resource.data.uid;
    }
  }
}
